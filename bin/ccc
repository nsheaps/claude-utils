#!/usr/bin/env bash
set -euo pipefail

# Source shared Claude CLI helpers
SCRIPT_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
source "$SCRIPT_DIR/lib/claude.lib.sh"

show_help() {
  cat <<'EOF'
ccc - Continue Claude Code session with visual feedback
Usage: ccc [ARGS...]

Short alias for 'claude --continue' with a brief status message.

Options:
  -h, --help    Show this help message
EOF
  exit 0
}

for arg in "$@"; do
  case "$arg" in
    -h|--help) show_help ;;
  esac
done

claudeish --continue "$@"
