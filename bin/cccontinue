#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"

show_help() {
  cat <<'EOF'
cccontinue - Continue last Claude Code session
Usage: cccontinue [ARGS...]

Shorthand for 'claude --continue', passing through all arguments.

Options:
  -h, --help    Show this help message
EOF
  exit 0
}

for arg in "$@"; do
  case "$arg" in
    -h|--help) show_help ;;
  esac
done

exec "$SCRIPT_DIR/run-claude" --continue "$@"
