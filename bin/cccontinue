#!/usr/bin/env bash
# cccontinue - Continue last Claude Code session
# Usage: cccontinue [ARGS...]
#
# Shorthand for 'claude --continue', passing through all arguments.
#
# Options:
#   -h, --help    Show this help message

set -euo pipefail

show_help() {
  sed -n '2,8p' "$0" | sed 's/^# //' | sed 's/^#//'
  exit 0
}

for arg in "$@"; do
  case "$arg" in
    -h|--help) show_help ;;
  esac
done

exec claude --continue "$@"
