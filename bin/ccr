#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"

show_help() {
  cat <<'EOF'
ccr - Resume Claude Code session with visual feedback
Usage: ccr [ARGS...]

Short alias for 'claude --resume' with a brief status message.

Options:
  -h, --help    Show this help message
EOF
  exit 0
}

for arg in "$@"; do
  case "$arg" in
  -h | --help) show_help ;;
  esac
done

exec "$SCRIPT_DIR/run-claude" --resume "$@"
