#!/usr/bin/env bash
# ccr - Resume Claude Code session with visual feedback
# Usage: ccr [ARGS...]
#
# Short alias for 'claude --resume' with a brief status message.
#
# Options:
#   -h, --help    Show this help message

set -euo pipefail

# Source shared Claude CLI helpers
SCRIPT_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
source "$SCRIPT_DIR/lib/claude.lib.sh"

show_help() {
  sed -n '2,8p' "$0" | sed 's/^# //' | sed 's/^#//'
  exit 0
}

for arg in "$@"; do
  case "$arg" in
    -h|--help) show_help ;;
  esac
done

claudeish --resume "$@"
