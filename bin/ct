#!/usr/bin/env bash
# ct - Shorthand for claude-team
# Usage: ct [OPTIONS] [CLAUDE_ARGS...]
#
# Alias for claude-team. Launch Claude Code with agent teams enabled.
# See 'claude-team --help' for full documentation.

set -euo pipefail

SCRIPT_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"

show_help() {
  cat <<'EOF'
ct - Shorthand for claude-team
Usage: ct [OPTIONS] [CLAUDE_ARGS...]

Launch Claude Code with agent teams enabled.
This is a shorthand alias for claude-team.

See 'claude-team --help' for full documentation.

Options:
  -h, --help    Show this help message (use claude-team --help for full docs)
EOF
  exit 0
}

for arg in "$@"; do
  case "$arg" in
    -h|--help) show_help ;;
  esac
done

exec "$SCRIPT_DIR/claude-team" "$@"
